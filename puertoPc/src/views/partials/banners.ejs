<section class="carousel-container banner">
                            
    <div class="slides animate__fadeIn fade">
        <img src="/images/banners/banner.webp" alt="">
    </div>
    
    <div class="slides animate__fadeIn fade" >
        <img src="/images/banners/banner2.webp" alt="">
    </div>

    <div class="slides animate__fadeIn fade">
        <img src="/images/banners/banner3.webp" alt="">
    </div>

    
    <!-- The dots/circles -->
    <div class="dots">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
        <span class="dot" onclick="currentSlide(4)"></span>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)"><i class="fas fa-chevron-down fa-1"></i></a>
    <a class="next" onclick="plusSlides(1)"><i class="fas fa-chevron-down fa-2"></i></a>
</section>