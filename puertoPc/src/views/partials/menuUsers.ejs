<div id="boxMenuUsers">
    <% if (typeof locals.user != "undefined") { %>
        <div class="boxImagUsers-mobile">         
            <figure class="imagUsersMenu-mobile">
                <div class="imagUsersImage-mobile">
                    <img src="/images/avatars/<%- user.image %>" alt="<%- user.firstName %>">
                </div>
            </figure>

            <div class="textsUsersMenu-mobile">  
                <h3>¡Hola <%- user.firstName %>!</h3>
                <p>Bienvenido/a a tu cuenta, donde encontraras tus compras, favoritos etc</p>
            </div>
        </div>
         <div class="buttonUsersMenu-mobile">
            <div class="buttonUsersMenuL-mobile">
             <button>  <a href="/profileUser/<%- user.id %> ">Mis datos</a></button>
            </div>
            <div class="buttonUsersMenuR-mobile">
             <button> <a  href="/logout">Cerrar sessión</a></button>
             </div>
         </div>
    
      <% } else { %>
        <div class="boxImagUsers">
            <div class="imagUsersMenu">
                <div class="imagUsersIcon">
                    <i class="fal fa-user-circle"></i>
                </div>
            </div>
            <div class="textsUsersMenu">
                <h3>Bienvenido</h3>
                <p>Ingresa a tu cuenta para ver tus compras, favoritos etc</p>
            </div>
        </div>
         <div class="buttonUsersMenu">
            <div class="buttonUsersMenuL">
                
             <button> <a href="/login">Ingresa</a></button>
            </div>
            <div class="buttonUsersMenuR">
             <button><a href="/register"> Crea tu cuenta</a></button>
             </div>
         </div>
     <% } %>
</div>
