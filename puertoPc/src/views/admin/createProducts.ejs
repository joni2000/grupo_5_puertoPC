<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head.ejs') %>
    
<body>
    <%- include('../partials/header.ejs') %>
    <main class="padding-top-fixed">
        <form class="form-create action=" action="/admin/store" method="POST" enctype="multipart/form-data">
                <div class="container-input">
                    <label class="text-form" for="name">Nombre:</label>
                    <input class="text-camp" type="text" name="name" id="name">
                </div>
                <div class="container-input">
                    <label class="text-form" for="description">Descripción:</label>
                    <input class="text-camp" type="text" name="description" id="description">
                </div>
                <div class="container-input">
                    <label class="text-form"  for="select">Categoría:</label>
                    <select class="text-camp" name="category" id="select">
                        <% category.forEach(categoria => { %>
                            <option value=""><%=categoria%></option>
                        <% }) %>
                    </select>    
                </div>
                <div class="container-input">
                    <label class="text-form" for="colors">Colores:</label>
                    <select class="text-camp" name="category" id="colors">
                        <% colors.forEach(color => { %>
                            <option value=""><%=color%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="container-input">
                    <label class="text-form" for="stock">Stock:</label>
                    <input class="text-camp" type="number" name="stock" id="stock">
                </div>
                <div class="container-input">
                    <label class="text-form" for="price">Precio:</label>
                    <input class="text-camp" type="text" name="price" id="price">
                </div>
                <div class="container-input">
                    <label class="text-form" for="discount">Descuento:</label>
                    <input class="text-camp" type="text" name="discount" id="discount">
                </div>
                <figure>
                    <label class="text-form" for="image">Seleccionar imagen:</label>
                    <input type="file" name="image" id="image">
                </figure>    
                <button type="submit">
                    enviar
                </button>
            </form>
    </main>
</body>
</html>