<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Puerto Pc</title>
        <link rel="stylesheet" href="/css/style.css">
        <script src="/js/menuMobile.js" defer></script>
        <script src="https://kit.fontawesome.com/20e7bf528f.js" crossorigin="anonymous"></script>    
    </head>
<body class="body-create">
    <header class="header">
        <nav class="top-create top">
            <a class="icon-menu">
                <i class="fas fa-bars"></i>
            </a>
            <a href="/" class="logo"><img src="/images/logo.png" alt="logo-puertopc"></a>
            <a class="logo-text" href="/">PuertoPc</a>
        </nav>
    </header>    
    <main class="main-create padding-top-fixed">
        <form class="form-create action=" id="form" action="/admin/store" method="POST" enctype="multipart/form-data" autocomplete="off">
                <h2 class="title-crear">Crear Producto</h2>
                <hr class="hr-create">
                <div class="container-input">
                    <label class="text-form" for="name" minlength="6" maxlength="80" aria-placeholder="Nombre del producto">Nombre:</label>
                    <input class="text-camp" type="text" name="name" id="name" value="<%= locals.old && old.name %>">
                    <% if (locals.errors && errors.name) { %>
                        <span class="error-message"><%= errors.name.msg %> </span>
                    <% } %>
                    <span class="error error-message" id="nameErrors"></span>
                </div>
                <div class="container-input">
                    <label class="text-form" for="description">Descripción:</label>
                    <textarea class="text-camp" name="description" id="description"><%= locals.old && old.description %></textarea>
                    <% if (locals.errors && errors.description) { %>
                        <span class="error-message"><%= errors.description.msg %> </span>
                    <% } %>
                    <span class="error error-message" id="descriptionErrors"></span>
                </div>
                <div class="container-input">
                    <label class="text-form"  for="select">Categoría:</label>
                    <select class="text-camp" name="category" id="category">
                        <option value="" hidden selected>Elegir</option>
                        <% categories.forEach(categoria => { %>
                            <option value="<%-categoria.id%>" <%= locals.old && old.category == categoria.id ? "selected" : ""%> ><%=categoria.name%></option>
                        <% }) %>
                    </select>
                    <% if (locals.errors && errors.category) { %>
                        <span class="error-message"><%= errors.category.msg %> </span>
                    <% } %>    
                    <span class="error-message" id="categoryErrors"></span>
                </div>
                <div class="container-input">
                    <label class="text-form" for="stock">Stock:</label>
                    <input class="text-camp" type="number" name="stock" id="stock" value="<%= locals.old && old.stock %>">
                    <% if (locals.errors && errors.stock) { %>
                        <span class="error-message"><%= errors.stock.msg %> </span>
                    <% } %>
                    <span class="error-message" id="stockErrors"></span>
                </div>
                <div class="container-input">
                    <label class="text-form" for="price">Precio:</label>
                    <input class="text-camp" type="text" name="price" id="price" value="<%= locals.old && old.price %>">
                    <% if (locals.errors && errors.price) { %>
                        <span class="error-message"><%= errors.price.msg %> </span>
                    <% } %>
                    <span class="error-message" id="priceErrors"></span>
                </div>
                <div class="container-input">
                    <label class="text-form" for="discount">Descuento:</label>
                    <input class="text-camp" type="number" name="discount" id="discount" value="<%= locals.old.discount ? old.discount : 0 %>">
                    <% if (locals.errors && errors.discount) { %>
                        <span class="error-message"><%= errors.discount.msg %> </span>
                    <% } %>
                    <span class="error" id="discountErrors"></span>
                </div>
                    <div class="container-select-image">
                        <figure class="img-container" id="img-preview">
                            <i class="fa-solid fa-trash-can"></i>
                        </figure>
                        <figure class="select-image" id="main-image">
                            <label class="text-form" for="image"><i class="fa-solid fa-image"></i></label>
                            <input class="buttom-image" type="file" name="image" id="file">
                        </figure>    
                        <figure class="select-image more-images" id="more-images">
                            <label class="text-form" for="image">agregar mas imagenes</label>
                            <input class="buttom-image" type="file" name="image" id="files" multiple>
                        </figure>    
                    </div>
                    <% if (locals.errors && errors.image) { %>
                        <span class="text-danger"><%= errors.image.msg %> </span>
                    <% } %>
                    <span class="error-message" id="fileErrors"></span>

                    <button  class="button-buy button-submit-create" type="submit">
                        Guardar producto
                    </button>
            </form>
    </main>
    <script src="/js/productForm.js"></script>
</body>
</html>