<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Todos los productos'}) %>
<body class="body-products-general">
	<!-- Header -->
	<%- include('../partials/header') %>

   <main class="box-products-general-main">
            <div class="letters-main-products">
            <h3>Categorias</h3>
            </div>
     <div class="box-categories-general">
    <div class="boxCategoriesJs">
       <div class="categoryCardList">
         <span class=" categoryCardListSpan "><i class="fal fa-times-circle"></i></span>
         <h4> Todos los productos </h4>
         </div>
      <% categories.forEach(category => { %> 
       <div class="categoryCardList" data-id="<%- category.id %>">
         <span class=" categoryCardListSpan "><i class="fal fa-times-circle"></i></span>
        <h4> <%- category.name %> </h4>
       </div>    
      <% }) %>
   </div>
     <div>
      <% categoryProduct.forEach(product => { %>
       <a href="/products/detalles/<%- product.id %>%>" class="card-products-general">
            <div class="box-products-all" data-id="<%- product.category_id %>">
               <section class="products-box">
                 <figure class="products-box_image">
       <img src="/images/products/<%- product.image[0].name %>" alt="<%- product.name %>">
                 </figure>
              <article class="products-box_data">   
                 <div class="products-general-box">
                     <div class="name-products-all">
                        <h3><%- product.name %></h3>
                  </div>
                    
             <div class="categories-products-general">
                 <div class="price-products-all">
                     <h3>Precio:</h3>
                     <h3><%- toThousand(product.price - product.price * product.discount / 100) %></h3>
                  </div> 
               <div class="discount-products-all">
                  <h4> <%- product.discount !== 0 ? `Descuento: ${product.discount}% OFF` : "" %></h4>
               </div>
               </div>
              </div>
             </article>
          </section>
           
          </div> 
      </a>
    <% }) %>
   </div>
   </div>
   </main>  
    <script src="/js/categories.js"></script>
	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>