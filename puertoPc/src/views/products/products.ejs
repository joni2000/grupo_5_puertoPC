<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>

    <main class="box-products-general">
        <div class="title-products-general">
            <h3>PuertoPc > Todo los productos</h3>
        </div>
        

        <% products.forEach(product => { %>
            <div class="box-products-all">
                 <section class="products-box">
                    <!-- <a href="detalles" class="card"> </a>-->
                            <figure class="products-box_image">
                                   <img src="images/products/<%- product.image %>" alt="Producto">
                             </figure>
                             <article class="products-box_data">     
                                 <div class="name-products-all">
                                      <h3>Nombre:</h3>
                                      <h3><%- product.name %></h3>
                                 </div>  
                                 <div class="description-products-all">
                                    <h3>Descripci√≥n:</h3>
                                    <h3><%- product.description %></h3>
                                 </div>   

                                 <div class="categories-products-1">
                                 <div class="stock-products-all">
                                    <h3>Cantidad:</h3>
                                    <h3><%- product.stock %></h3>
                                 </div>  
                                 <div class="category-products-all">
                                    <h3>Categoria:</h3>
                                    <h3><%- product.category %></h3>
                                 </div> 
                                 
                                 </div>
                                 <div class="categories-products-2">
                                 <div class="price-products-all">
                                    <h3>Precio:</h3>
                                    <h3><%- toThousand(product.price - product.price * product.discount / 100) %></h3>
                                 </div> 
                                 <div class="discount-products-all">
                                    <h3>Descuento:</h3>
                                    <h4><%- product.discount !== 0 ? `${product.discount}% OFF` : "" %></h4>
                                 </div> 
                                 </div>

                                 <div class="colors-products-all">
                                    <h3>Colores:</h3>
                                    <h3><%- product.colors %></h3>
                                 </div> 
                                 
                             </article>
                   
                </section>
            </div> 
        <% }) %>

      
    </main>  


	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>
            

