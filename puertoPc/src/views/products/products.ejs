<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>

    <main class="home padding-top-fixed">
        <div class="productAdress">
            <h3>PuertoPc > Todo los productos</h3>
        </div>
        

        <% products.forEach(product => { %>
            <div class="box-products-all">
            <section class="products-box">
                  <a href="detalles" class="card">
                            <figure class="products-box_image">
                                   <img src="images/products/<%- product.image %>" alt="Producto">
                             </figure>
                             <article class="products-box_data">     
                                 <h3><%- product.name %></h3>          
                                 <span><%- product.discount !== 0 ? `${product.discount}% OFF` : "" %> </span>
                                 <p> <%- toThousand(product.price - product.price * product.discount / 100) %></p>
                             </article>
                    </a>
                </section>
            </div> 
        <% }) %>
      
    </main>  


	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>
            

