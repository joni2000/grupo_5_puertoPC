<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %> 
<body>
    <%- include('./partials/header') %> 
    <main class="home padding-top-fixed">
        <div class="banner">
            <img src="images/banner.webp" alt="banner">
            <i class="fas fa-chevron-down"></i>
            <i class="fas fa-chevron-down"></i> 
        </div>

        <h2 class="subtitle">Ofertas <a class="link-all" href="">Ver todas</a></h2>
        <section class="products">    
            <section class="slider slider-offer"> 
                <% productsInSale.forEach(productInSale => { %>
                    <a href="/products/detalles/<%-productInSale.id %>" class="card">
                        <div>
                            <img src="/images/products/<%- productInSale.image[2].name %>" alt="imagen de producto">							
                        </div>
                        <div class="card-info">
                            <h3>
                                <%=productInSale.name %>
                            </h3>
                        </div>    
                        <div class="card-description-text">   
                            <p>$<%= toThousand(productInSale.price - productInSale.price * productInSale.discount / 100) %> </p>
                            <p><span>$<%= toThousand(productInSale.price) %>  </span> <%- productInSale.discount !== 0 ? `${productInSale.discount}% OFF` : "" %> </p>
                        </div> 
                    </a>                  
                <% }) %>

                <i class="fas fa-chevron-down"></i>
                <i class="fas fa-chevron-down"></i> 
            </section>

         </section>
        <section class="products">
            <h2 class="subtitle">Te puede interesar</h2>
            
            <section class="slider">
                        <% products.forEach(product => { %>
                         
                            <a href="/products/detalles/<%-product.id%>" class="card">
                                
                                <div>
                                    <img src="/images/products/<%-product.image[0].name%>" alt="imagen de productsAdvanges">	
                                 </div>
                                 <div class="card-info">
                                    <h3>
                                        <%- product.name %>
                                    </h3>
                                 </div> 
                             
                                 <div class="card-description-text">   
                                    <p>$<%- toThousand(product.price - product.price * product.discount / 100) %></p>
                                    <p>Envío gratis</p>
                                    <p>18 cuotas sin interés</p>
                                </div> 
                                <div class="button-box">
                                    <button class="button-buy">agregar al carrito</button>
                                </div>
                           </a> 
                        <% }) %>
                    <i class="fas fa-chevron-down"></i>
                    <i class="fas fa-chevron-down"></i>         
            </section>
                
            </section> 
        
    </main>

    <%- include('./partials/footer.ejs') %> 

</body>
</html>