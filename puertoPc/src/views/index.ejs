<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %> 
<body>
    <%- include('./partials/header.ejs') %> 
    <main class="home padding-top-fixed">
        <div class="banner">
            <img src="images/banner.webp" alt="banner">
            <i class="fas fa-chevron-down"></i>
            <i class="fas fa-chevron-down"></i> 
        </div>
        <h2 class="subtitle">Ofertas <a class="link-all" href="">Ver todas</a></h2>
       
        
        <section class="products">
          <i class="fas fa-chevron-down"></i>

            <section class="slider slider-offer"> 

                <% for( var i = 0; i < 3; i++ ) { %>

                <a href="detalles" class="card">
                    <div>
                        <img src="/images/products/<%- productsInSale[1].image %>" alt="imagen de producto">							
                    </div>
                    <div class="card-info">
                        <h3>
                            <%- productsInSale[1].name %>
                        </h3>
                    </div>    
                    <div class="card-description-text">   
                        <p>$<%- toThousand(productsInSale[1].price - productsInSale[1].price * productsInSale[1].discount / 100) %> </p>
                        <p><span>$<%- toThousand(productsInSale[1].price) %>  </span> <%- productsInSale[1].discount !== 0 ? `${productsInSale[1].discount}% OFF` : "" %> </p>
                    </div> 
                </a>    
                <% } %>
            </section>
            
            <i class="fas fa-chevron-down"></i> 
         </section>
        <section class="products">
            <h2 class="subtitle">Te puede interesar</h2>
            <i class="fas fa-chevron-down"></i>
            
           
            <section class="slider"> 
             
                <% for( var i = 0; i < 4; i++ ) { %>
   
                <a href="detalles" class="card">
                    <div>
                        <img src="/images/products/<%- productsAdvantages[1].image %>" alt="imagen de productsAdvanges">	
                    </div>
                    <div class="card-info">
                        <h3>
                            <%- productsAdvantages[1].name %>
                        </h3>
                    </div>    
                    <div class="card-description-text">   
                        <p>$<%- toThousand(productsAdvantages[1].price - productsAdvantages[1].price * productsAdvantages[1].discount / 100) %></p>
                        <p>Envío gratis</p>
                        <p>18 cuotas sin interés</p>
                    </div> 
                    <div class="button-box">
                        <button class="button-buy">agregar al carrito</button>
                    </div>
                </a>
               <% } %>

              </section>

                <i class="fas fa-chevron-down"></i>        
            
        </section>   

        <section class="products">
            
            <i class="fas fa-chevron-down"></i>
            
           
            <section class="slider"> 
             
                <% for( var i = 0; i < 4; i++ ) { %>
   
                <a href="detalles" class="card">
                    <div>
                        <img src="/images/products/<%- productsAdvantages[1].image %>" alt="imagen de productsAdvanges">	
                    </div>
                    <div class="card-info">
                        <h3>
                            <%- productsAdvantages[1].name %>
                        </h3>
                    </div>    
                    <div class="card-description-text">   
                        <p>$<%- toThousand(productsAdvantages[1].price - productsAdvantages[1].price * productsAdvantages[1].discount / 100) %></p>
                        <p>Envío gratis</p>
                        <p>18 cuotas sin interés</p>
                    </div> 
                    <div class="button-box">
                        <button class="button-buy">agregar al carrito</button>
                    </div>
                </a>
               <% } %>

              </section>

                <i class="fas fa-chevron-down"></i>        
            
        </section>  
        
        
    </main>

    <%- include('./partials/footer.ejs') %> 

</body>
</html>