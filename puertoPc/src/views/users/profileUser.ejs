<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/header.ejs') %>

            <main class="padding-top-fixed">

                <form class="form-account">
                    <div class="my-account">
                        <h3>Mi cuenta</h3>
                        <div class="avatar-profileUser">
                            <label>Lugar para el avatar</label>
                            <figure class="">
                                <label class="" for=""></label>
                            </figure>
                        </div>
                    </div>
                    <div class="account-data">
                        <h4>Datos de cuenta</h4>
                            <div>
                                <div class="data ">
                                    <label>Nombre: </label>
                                    <p><%-user.first_name%></p>
                                </div>
                                <div class="data ">
                                    <label>Apellido: </label>
                                    <p><%-user.last_name%></p>
                                </div>
                                <div class="data ">
                                    <label>Email: </label>
                                    <p><%-user.email%></p>
                                </div>
                            </div>
                    </div>
                    <div class="personal-information">
                        <h4>Datos personales</h4>
                            <div>
                                <div class="data ">
                                    <label>País:</label>
                                    <p><%-user.country%></p>
                                </div>
                                <div class="data ">
                                    <label>Provincia:</label>
                                    <p><%-user.province%></p>
                                </div>
                                <div class="data ">
                                    <label>Ciudad:</label>
                                    <p><%-user.city%></p>
                                </div>
                                <div class="data ">
                                    <label>Domicilio: </label>
                                    <p><%-user.address%></p>
                                </div>

                                <div class="data ">
                                    <label>Teléfono: </label>
                                    <p><%-user.phone%></p>
                                </div>

                            </div>
                    </div>
                    <div class="button-edit-info">
                        <a href="/editUser" class="submit">Editar Información</a>
                    </div>
                </form>
            </main>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>