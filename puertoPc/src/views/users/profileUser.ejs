<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/header.ejs') %>

            <main class="">

                <form class="form-account" action="/profileUser/<%-user.id%>?_method=PUT" method="POST">
                    <div>
                        <h3>Mi cuenta</h3>
                            <label>Lugar para el avatar</label>
                            <figure class="">
                                <label class="" for=""></label>
                                <input class="" type="file" name="" id="">
                            </figure>
                    </div>
                    <div>
                        <h4>Datos de cuenta</h4>
                            <div>
                                <div class="data ">
                                    <label>Nombre:</label>
                                    <input type="text" name="firstName" value="<%-user.firstName%>">
                                </div>
                                <div class="data ">
                                    <label for="">Apellido:</label>
                                    <input type="text" name="lastName" value="<%-user.lastName%>">
                                </div>
                                <div class="data ">
                                    <label>Email:</label>
                                    <input type="email" name="email" value="<%-user.email%>">
                                </div>
                            </div>
                    </div>
                    <div>
                        <h4>Datos personales</h4>
                            <div>
                                <div class="data ">
                                    <label>País:</label>
                                    <input type="text" name="country" value="<%-user.country%>">
                                </div>
                                <div class="data ">
                                    <label>Provincia:</label>
                                    <input type="text" name="province" value="<%-user.province%>">
                                </div>
                                <div class="data ">
                                    <label>Ciudad:</label>
                                    <input type="text" name="city" value="<%-user.city%>">
                                </div>
                                <div class="data ">
                                    <label>Domicilio: </label>
                                    <input type="address" name="address" value="<%-user.address%>">
                                </div>

                                <div class="data ">
                                    <label>Teléfono: </label>
                                    <input type="tel" name="phone" value="<%-user.phone%>">
                                </div>

                            </div>
                    </div>
                    <div>
                        <button class="submit">Editar producto</button>
                    </div>
                </form>
            </main>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>